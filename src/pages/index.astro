    }
    100% {
      opacity: 1;
      filter: brightness(1) contrast(1);
    }
  }

  html,
  body {
    margin: 0;
    display: flex;
    justify-content: center;
    background-color: var(--color-primary-black);
    color: var(--color-primary-white);
    animation: tvOn 0.6s ease-in-out;
  }

  body {
    max-width: 1440px;
  }

  main {
    margin: 40px;
  }

  .header {
    margin-top: var(--spacing-token-6);
    text-align: center;
    margin-bottom: var(--spacing-token-4);
    width: 100%;
  }

  .header h2 {
    margin: 0;
    color: var(--color-primary-white);
  }

  .header-line {
    height: var(--spacing-token-2);
    background-color: var(--color-secondary-pink);
  }

  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-token-4);
    width: 100%;
    padding: var(--spacing-token-2);
  }

  .column {
    margin: var(--spacing-token-2);
  }

  .column h2 {
    color: var(--color-secondary-pink);
    padding-bottom: var(--spacing-token-1);
  }

  .product-list li {
    font-size: var(--font-size-headings-magda-pro---special-l);
    font-family: "MagdaPro", sans-serif;
    display: flex;
    justify-content: space-between;
    position: relative;
  }

  .product-list li span {
    font-size: var(--font-size-headings-magda-pro---special-l);
    font-family: "MagdaPro", sans-serif;
  }

  .product-list li a {
    display: flex;
    justify-content: space-between;
    width: 100%;
  }

  .product-list li span:first-child {
    position: relative;
    background-color: var(--color-primary-black);
    z-index: 1;
    padding-right: var(--spacing-token-1);
  }

  .product-list li span:last-child {
    background-color: var(--color-primary-black);
    z-index: 1;
  }

  .product-list li::before {
    content: "....................................................................................................";
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    white-space: nowrap;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
    color: var(--color-primary-white);
  }

  .product-list a {
    color: var(--color-primary-white);
    text-decoration: none;
    transition: color 0.3s, transform 0.3s;
  }

  .product-list a:hover {
    color: var(--color-secondary-pink);
    text-decoration: underline;
    transform: scale(1.05);
  }

  .product {
    display: flex;
    align-items: flex-start;
    position: relative;
    width: 100%;
  }

  .BlueBackground {
    background-color: var(--color-secondary-dark-blue);
    width: 100%;
    height: 35%;
    position: absolute;
    bottom: 0;
  }

  .product-content {
    display: flex;
    align-items: center;
    width: 100%;
    padding: var(--spacing-token-4);
    position: relative;
    z-index: 1;
  }

  .product-image {
    display: flex;
    justify-content: center;
    flex: 1;
    top: -25%;
    left: 75%;
    position: absolute;
  }

  .product-image img {
    width: 100%;
  }

  .product-content h1 {
    color: var(--color-primary-white);
    margin-right: var(--spacing-token-2);
    text-align: left;
    top: 30px;
  }
  ul {
    padding: 2px;
  }

  @media (max-width: 768px) {
  .column {
    margin: var(--spacing-token-1); /* Adjust margin for single column layout */
  }


  .product-image {
    position: relative;
    top: 0;
    left: 0;
  }


  .BlueBackground {
    background-color: var(--color-secondary-dark-blue);
    width: 100%;
    height: 80px;
    position: absolute;
    bottom: 0;
  }


}



