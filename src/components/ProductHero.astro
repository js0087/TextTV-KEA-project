---
const { productName, description, img } = Astro.props;
---

<body>
  <main>
    <section class="product">
      <div class="product-details">
        <h1>{productName}</h1>
        <p>{description}</p>
      </div>
      <div class="product-image">
        <img src="/public/OatDrink.svg" alt="Product Image">
      </div>
    </section>
  </main>
</body>

<style>
main {
  display: flex;
  justify-content: center;
}

.product {
  display: flex;
  align-items: center;
  max-width: 100%;
  background-color: var(--color-secondary-dark-blue);
}

.product-image {
  flex: 1;
  display: flex;
  justify-content: center;
}

.product-image img {
  width: 80%;
  height: auto;
  max-height: 600px; /* Adjust this value as needed */
}

.product-details {
  flex: 1;
  padding: 60px;
}

.product-details h1 {
  margin-top: 0;
}

@media (max-width: 768px) {
  .product {
    flex-direction: column; /* Stack elements in a column */
  }

  .product{
    padding-bottom: 40px;
  }

  .product-details {
    padding: 20px;
    text-align: center;
  }

  .product-image img {
    width: 100%;
    max-height: 300px; /* Adjust this value for smaller screens */
  }
}
</style>
